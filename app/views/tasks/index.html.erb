<ul style="list-style:none">
  <% @tasks.each do |task| %>
    <li>
      <%= check_box_tag "task_ids[]", task.id, task.completed %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are your sure?"}  %>
    </li>
  <% end %>
  <p><%= link_to "Add a new task", new_task_path() %></p>
</ul>
